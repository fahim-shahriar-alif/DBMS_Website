    <div class="main-content">
        <div class="page-header">
            <h1>üìà Stocks Management</h1>
            <p>Manage stock listings, prices, and market data</p>
        </div>

        <div class="stats-grid" style="margin-bottom: 30px;">
            <div class="stat-card">
                <div class="stat-icon blue">üìà</div>
                <div class="stat-info">
                    <h3>Listed Stocks</h3>
                    <p class="stat-number" id="totalStocks">0</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon green">üìä</div>
                <div class="stat-info">
                    <h3>Market Cap</h3>
                    <p class="stat-number" id="totalMarketCap">$0</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon orange">üìà</div>
                <div class="stat-info">
                    <h3>Avg Price</h3>
                    <p class="stat-number" id="avgPrice">$0</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon purple">üî•</div>
                <div class="stat-info">
                    <h3>Top Performer</h3>
                    <p class="stat-number" id="topPerformer">-</p>
                </div>
            </div>
        </div>

        <div class="table-controls">
            <div class="search-box">
                <input type="text" placeholder="Search stocks..." id="searchInput">
                <button class="btn-search" onclick="handleSearch()">Search</button>
            </div>
            <div class="action-buttons">
                <button class="btn-add" onclick="openAddModal()">+ Add</button>
            </div>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Stock ID</th>
                        <th>Company ID</th>
                        <th>Company Name</th>
                        <th>Current Price</th>
                        <th>Total Shares</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <tr>
                        <td colspan="10" style="text-align: center; padding: 40px;">No stocks found. Click "+ Add" to
                            create your first stock.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add/Edit Modal -->
    <div id="stockModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modalTitle">Add Stock</h2>
                <span class="close" onclick="closeModal('stockModal')">&times;</span>
            </div>
            <div class="modal-body">
                <form id="stockForm">
                    <input type="hidden" id="stock_id">

                    <div class="form-group">
                        <label for="company_id">Company ID *</label>
                        <select id="company_id" required onchange="updateCompanyName()">
                            <option value="">Select Company</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="company_name">Company Name</label>
                        <input type="text" id="company_name" readonly style="background: #f5f5f5;">
                    </div>

                    <div class="form-group">
                        <label for="current_price">Current Price ($) *</label>
                        <input type="number" id="current_price" step="0.01" min="0" required>
                    </div>

                    <div class="form-group">
                        <label for="total_shares">Total Shares *</label>
                        <input type="number" id="total_shares" min="0" required>
                    </div>

                    <div class="form-group">
                        <label for="status">Status *</label>
                        <select id="status" required>
                            <option value="Available">Available</option>
                            <option value="Not Available">Not Available</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeModal('stockModal')">Cancel</button>
                <button class="btn btn-primary" onclick="handleSave()">Save</button>
            </div>
        </div>
    </div>

    <script src="js/local-database.js"></script>
    <script src="js/logout.js"></script>
    <script>
        const db = new LocalDatabase('stocks');
        const companiesDb = new LocalDatabase('companies');
        let isEditMode = false;

        window.addEventListener('DOMContentLoaded', () => {
            loadStocks();
            loadCompanies();
        });

        function loadCompanies() {
            const companies = companiesDb.getAll();
            const companySelect = document.getElementById('company_id');

            // Clear existing options except the first one
            companySelect.innerHTML = '<option value="">Select Company</option>';

            companies.forEach(company => {
                const option = document.createElement('option');
                option.value = company.id;
                option.textContent = `${company.id} - ${company.company_name}`;
                option.setAttribute('data-name', company.company_name);
                companySelect.appendChild(option);
            });
        }

        function updateCompanyName() {
            const companySelect = document.getElementById('company_id');
            const selectedOption = companySelect.options[companySelect.selectedIndex];
            const companyName = selectedOption.getAttribute('data-name') || '';
            document.getElementById('company_name').value = companyName;
        }

        function loadStocks() {
            const stocks = db.getAll();
            renderTable(stocks);
            updateStats(stocks);
        }

        function updateStats(stocks) {
            const totalStocks = stocks.length;
            const totalMarketCap = stocks.reduce((sum, stock) => sum + parseFloat(stock.market_cap || 0), 0);
            const avgPrice = stocks.length > 0 ? stocks.reduce((sum, stock) => sum + parseFloat(stock.current_price || 0), 0) / stocks.length : 0;
            const topPerformer = stocks.length > 0 ? stocks.reduce((prev, current) =>
                parseFloat(current.change_percent || 0) > parseFloat(prev.change_percent || 0) ? current : prev
            ) : null;

            document.getElementById('totalStocks').textContent = totalStocks;
            document.getElementById('totalMarketCap').textContent = '$' + totalMarketCap.toLocaleString();
            document.getElementById('avgPrice').textContent = '$' + avgPrice.toFixed(2);
            document.getElementById('topPerformer').textContent = topPerformer ? topPerformer.symbol : '-';
        }

        function renderTable(stocks) {
            const tbody = document.getElementById('tableBody');

            if (stocks.length === 0) {
                tbody.innerHTML = '<tr><td colspan="10" style="text-align: center; padding: 40px;">No stocks found. Click "+ Add" to create your first stock.</td></tr>';
                return;
            }

            tbody.innerHTML = stocks.map(stock => `
                <tr>
                    <td><input type="checkbox" data-id="${stock.id}" onchange="toggleRowSelection(${stock.id}, this)"></td>
                    <td>${stock.id}</td>
                    <td><strong>${stock.symbol}</strong></td>
                    <td>${stock.company_name}</td>
                    <td>$${parseFloat(stock.current_price || 0).toFixed(2)}</td>
                    <td>${parseInt(stock.total_shares || 0).toLocaleString()}</td>
                    <td>$${parseFloat(stock.market_cap || 0).toLocaleString()}</td>
                    <td style="color: ${parseFloat(stock.change_percent || 0) >= 0 ? 'green' : 'red'}">
                        ${parseFloat(stock.change_percent || 0) >= 0 ? '+' : ''}${parseFloat(stock.change_percent || 0).toFixed(2)}%
                    </td>
                    <td><span class="badge badge-${stock.status.toLowerCase()}">${stock.status}</span></td>
                    <td>
                        <div class="action-buttons-inline">
                            <button class="btn-small btn-edit" onclick="editSingleStock(${stock.id})" title="Edit">‚úèÔ∏è</button>
                            <button class="btn-small btn-delete" onclick="deleteSingleStock(${stock.id})" title="Delete">üóëÔ∏è</button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        function handleSearch() {
            const query = document.getElementById('searchInput').value;
            if (query.trim() === '') {
                loadStocks();
            } else {
                const results = db.search(query);
                renderTable(results);
            }
        }

        function openAddModal() {
            isEditMode = false;
            document.getElementById('modalTitle').textContent = 'Add Stock';
            document.getElementById('stockForm').reset();
            document.getElementById('stock_id').value = '';
            document.getElementById('company_name').value = '';
            loadCompanies();
            openModal('stockModal');
        }

        function openEditModal(id) {
            isEditMode = true;
            document.getElementById('modalTitle').textContent = 'Edit Stock';
            loadCompanies();

            const stock = db.getById(id);
            if (stock) {
                document.getElementById('stock_id').value = stock.id;
                document.getElementById('company_id').value = stock.company_id;
                document.getElementById('company_name').value = stock.company_name;
                document.getElementById('current_price').value = stock.current_price || '';
                document.getElementById('total_shares').value = stock.total_shares || '';
                document.getElementById('status').value = stock.status;
                openModal('stockModal');
            }
        }

        function handleSave() {
            const data = {
                company_id: document.getElementById('company_id').value,
                company_name: document.getElementById('company_name').value,
                current_price: document.getElementById('current_price').value,
                total_shares: document.getElementById('total_shares').value,
                status: document.getElementById('status').value
            };

            if (isEditMode) {
                const id = document.getElementById('stock_id').value;
                db.update(id, data);
                alert('Stock updated successfully!');
            } else {
                db.add(data);
                alert('Stock added successfully!');
            }

            closeModal('stockModal');
            loadStocks();
        }

        function handleDelete(id) {
            if (!confirm('Are you sure you want to delete this stock?')) {
                return;
            }

            db.delete(id);
            alert('Stock deleted successfully!');
            loadStocks();
        }

        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        window.onclick = function (event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        }

        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                handleSearch();
            }
        });
    </script>
</body>

